[Unit]
Description=Duck DNS (DynDNS) updater
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
# Check if DUCKDNS_TOKEN is set in /etc/duckdns/duckdns.env before running anything
# ExecCondition=grep 'DUCKDNS_TOKEN=\S.*$' /etc/duckdns/duckdns.env
ExecStart=/bin/sh /usr/bin/duckdns
